{
  "manifest_version": 2,
  "name": "interceptor",
  "description": "Run web clients without backends by mocking HTTP requests",
  "version": "0.1",

  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["lib/sinon.js"],
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "webRequest",
    "tabs",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ]
}
